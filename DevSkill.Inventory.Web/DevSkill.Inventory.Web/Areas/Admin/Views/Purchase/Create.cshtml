@model PurchaseCreateModel
@{
    ViewData["Title"] = "Create Purchase";
}

@section Styles
{
    <link rel="stylesheet" href="~/adminlte/css/customStyle.css">
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create New Purchase</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Purchases</a></li>
                    <li class="breadcrumb-item active">Create New</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create A Purchase</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-antiforgery="true" asp-area="Admin" asp-controller="Purchase" asp-action="Create" method="post">
                        <div class="card-body">
                            <!-- Supplier Name -->
                            <div class="form-group">
                                <label asp-for="SupplierName"></label>
                                <input type="text" asp-for="SupplierName" class="form-control" />
                                <span asp-validation-for="SupplierName" class="text-danger"></span>
                            </div>

                            <!-- Purchase Date -->
                            <div class="form-group">
                                <label asp-for="Date"></label>
                                <input type="date" asp-for="Date" class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>

                            <!-- Total Amount -->
                            <div class="form-group">
                                <label asp-for="TotalAmount"></label>
                                <input type="number" asp-for="TotalAmount" class="form-control" step="0.01" />
                                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                            </div>

                            <!-- Purchased Items -->
                            <div class="form-group">
                                <label>Purchased Items</label>
                                <table class="table table-bordered" id="itemsTable">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Unit Price</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <input type="text" name="PurchasedItems[0].ProductName" class="form-control" placeholder="Product Name" />
                                            </td>
                                            <td>
                                                <input type="number" name="PurchasedItems[0].Quantity" class="form-control" step="1" min="1" placeholder="Quantity" />
                                            </td>
                                            <td>
                                                <input type="number" name="PurchasedItems[0].UnitPrice" class="form-control" step="0.01" placeholder="Unit Price" />
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-danger btn-sm remove-item">Remove</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <button type="button" class="btn btn-primary btn-sm" id="addItem">Add Item</button>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            let itemIndex = 1; // Initial index for purchased items

            // Add new item row
            $("#addItem").click(function () {
                let newItemRow = `<tr>
                                            <td>
                                                <input type="text" name="PurchasedItems[${itemIndex}].ProductName" class="form-control" placeholder="Product Name" />
                                            </td>
                                            <td>
                                                <input type="number" name="PurchasedItems[${itemIndex}].Quantity" class="form-control" step="1" min="1" placeholder="Quantity" />
                                            </td>
                                            <td>
                                                <input type="number" name="PurchasedItems[${itemIndex}].UnitPrice" class="form-control" step="0.01" placeholder="Unit Price" />
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-danger btn-sm remove-item">Remove</button>
                                            </td>
                                        </tr>`;
                $("#itemsTable tbody").append(newItemRow);
                itemIndex++;
            });

            // Remove item row
            $(document).on('click', '.remove-item', function () {
                $(this).closest('tr').remove();
            });
        });
    </script>
}
