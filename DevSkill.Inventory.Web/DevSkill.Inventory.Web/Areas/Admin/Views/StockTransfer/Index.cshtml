                                </div>
                            </div>
                            <div class="btn-group">
                                <a href="@Url.Action("Create", "StockTransfer")" class="btn btn-primary-cs btn-sm">
                                    <i class="fas fa-plus"></i> New
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <partial name="_ResponsePartial" />
                        <partial name="_ModalPartial" />
                        <table id="stockTransfer" class="table table-striped">
                            <thead>
                                <tr>
                                    <th><input type="checkbox" id="selectAll" /></th>
                                    <th>Source</th>
                                    <th>Destination</th>
                                    <th>Product & Quantity</th>
                                    <th>Date</th>
                                    <th>Refered By</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
