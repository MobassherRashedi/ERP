@model StockTransferListModel
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery antiforgery
@{
    ViewData["Title"] = "Stock Transfers";
}
@{
    var iconPath = Url.Content("~/adminlte/svg/icons.svg");
}
