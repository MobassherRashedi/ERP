@model DevSkill.Inventory.Web.Areas.Admin.Models.UserUpdateModel
@{
    ViewData["Title"] = "Update User";
}

@section Styles
{
    <link rel="stylesheet" href="~/adminlte/css/customStyle.css">
   
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Update User</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Users</a></li>
                    <li class="breadcrumb-item active">Update</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col">
                <!-- general form elements -->
                <div class="card">
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Update" asp-area="Admin" method="post" enctype="multipart/form-data" asp-antiforgery="true">
                        <div class="card-body">
                            <div class="row g-3">
                                <!-- Profile Picture -->
                                <!-- Profile Picture -->
                                <div class="col-md-12 d-flex justify-content-center mb-4">
                                    <img src="@Model.ProfilePicturePath" alt="@Model.FullName's Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                                    <div>
                                        <label for="ProfilePicture" class="btn btn-primary btn-sm" style="padding: 5px; border-radius: 50%; background-color: rgba(255, 255, 255, 0.8); border: 1px solid #ccc; color:darkslategray; cursor: pointer;">
                                            <i class="fas fa-camera"></i> <!-- Font Awesome camera icon -->
                                        </label>
                                        <input type="file" asp-for="ProfilePicture" class="d-none" id="ProfilePicture" />
                                    </div>
                                </div>



                                <!-- First Name -->
                                <div class="col-md-6 form-floating">
                                    <input asp-for="FirstName" class="form-control" />
                                    <label asp-for="FirstName">First Name</label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                                <!-- Last Name -->
                                <div class="col-md-6 form-floating">
                                    <input asp-for="LastName" class="form-control" />
                                    <label asp-for="LastName">Last Name</label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" readonly />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Password"></label>
                                        <input asp-for="Password" class="form-control" placeholder="Leave blank to keep current password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber"></label>
                                        <input asp-for="PhoneNumber" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="DateOfBirth"></label>
                                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Gender"></label>
                                        <select asp-for="Gender" class="form-control">
                                            <option value="">Select Gender</option>
                                            @foreach (DevSkill.Inventory.Infrastructure.Identity.Gender gender in Enum.GetValues(typeof(DevSkill.Inventory.Infrastructure.Identity.Gender)))
                                            {
                                                <option value="@gender">@gender</option>
                                            }
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label>Roles</label>
                                        <select asp-for="Roles" class="form-control" multiple>
                                            @foreach (var role in Model.AvailableRoles)
                                            {
                                                <option value="@role">@role</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="IsActive" class="col-form-label" style="min-width: 120px;">Active:</label>
                                        <input type="checkbox" asp-for="IsActive" class="form-check-input" />
                                        <span asp-validation-for="IsActive" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Update User</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
