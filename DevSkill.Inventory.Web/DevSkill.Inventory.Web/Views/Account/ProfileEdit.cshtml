@model DevSkill.Inventory.Web.Models.ProfileUpdateModel
@{
    ViewData["Title"] = "Update Profile";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body card-body-cs">
                    <h2 class="text-center">Update Profile</h2>
                    <hr />

                    <form asp-action="ProfileEdit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row g-3">
                            <!-- Profile Picture -->
                            <div class="col-md-12 text-center mb-4">
                                <img src="@Model.ProfilePicture" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                                <input type="file" asp-for="ProfilePicture" class="form-control-file mt-2" />
                                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                            </div>

                            <!-- First Name -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="FirstName" class="form-control" />
                                <label asp-for="FirstName">First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="LastName" class="form-control" />
                                <label asp-for="LastName">Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="Email" class="form-control" readonly />
                                <label asp-for="Email">Email</label>
                            </div>

                         <!-- Gender -->
                            <div class="col-md-6 form-floating">
                                <select asp-for="Gender" class="form-control">
                                    <option value="">Select Gender</option>
                                    @foreach (DevSkill.Inventory.Infrastructure.Identity.Gender gender in Enum.GetValues(typeof(DevSkill.Inventory.Infrastructure.Identity.Gender)))
                                    {
                                        <option value="@gender">@gender</option>
                                    }
                                </select>
                                <label asp-for="Gender">Gender</label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>


                            <!-- Date of Birth -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="DateOfBirth" type="date" class="form-control" />
                                <label asp-for="DateOfBirth">Date of Birth</label>
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <!-- Phone Number -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="PhoneNumber" class="form-control" />
                                <label asp-for="PhoneNumber">Phone Number</label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary mt-3">Update Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .card {
        border-radius: 15px;
    }

    .card-body {
        padding: 30px;
    }

    h2 {
        font-weight: 600;
        color: #333;
    }

    .form-floating label {
        padding-left: 12px;
    }

    .form-floating .form-control {
        height: calc(3.5rem + 2px);
    }

    .form-control {
        padding: 12px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
