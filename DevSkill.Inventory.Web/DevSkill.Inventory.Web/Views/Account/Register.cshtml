@model RegistrationModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body card-body-cs">
                    <h2 class="text-center">Create a New Account</h2>
                    <hr />
                    <form id="registerForm" asp-area="" asp-action="Register" asp-controller="Account"
                          asp-antiforgery="true" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="row g-3">
                            <!-- First Name -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                <label asp-for="FirstName">First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                <label asp-for="LastName">Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                                <label asp-for="Email">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <!-- Gender -->
                            <div class="col-md-6 form-floating">
                                <select asp-for="Gender" class="form-control">
                                    <option value="">Select Gender</option>
                                    <option value="1">Male</option>
                                    <option value="2">Female</option>
                                    <option value="3">Other</option>
                                    <option value="4">Prefer Not to Say</option>
                                </select>
                                <label asp-for="Gender">Gender</label>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                            <!-- Password -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                                <label asp-for="Password">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Confirm Password -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <!-- Date of Birth with Datepicker -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="Date of Birth" />
                                <label asp-for="DateOfBirth">Date of Birth</label>
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <!-- Phone Number -->
                            <div class="col-md-6 form-floating">
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                <label asp-for="PhoneNumber">Phone Number</label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                           
                        </div>

                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn-primary-login mt-3">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .card {
        border-radius: 15px;
    }

    .card-body {
        padding: 30px;
    }

    h2 {
        font-weight: 600;
        color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .form-floating label {
        padding-left: 12px;
    }

    .form-floating .form-control {
        height: calc(3.5rem + 2px);
    }

    .form-control {
        padding: 12px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
